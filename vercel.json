{
  "headers": [
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "images": {
    "sizes": [640, 750, 828, 1080, 1200],
    "domains": ["tournaments.com"],
    "minimumCacheTTL": 31536000
  },
  "crons": [
    {
      "path": "/api/cron/generate-news",
      "schedule": "0 * * * *"
    }
  ],
  "env": {
    "CRON_SECRET": {
      "development": "@cron-secret-development",
      "preview": "@cron-secret-preview",
      "production": "@cron-secret-production"
    }
  }
}